#Approach:Traverse from starting to ending excluding the space and store the words in a string
#source:Leetcode

class Solution:
    def reverseWords(self, s: str) -> str:
       result,i,n = '',0,len(s)
       while i < n:
            while i < n and s[i] == ' ': #check until there is no space and then start with j
                     i += 1
            if i >= n:
                   break
            j = i + 1
            while j < n and s[j] != ' ':
                  j += 1
            sub = s[i:j]
            if len(result) == 0:
                result = sub
            else:
                result = sub +" "+ result
            
            i = j+1 
                
       return result


#Time: O(n)
#Space: O(n) (result string)

#optimal

class Solution:
    def reverseWords(self, s: str) -> str:
       chars = list(s)
       i,n = 0,len(chars)
       k = 0
       

       while i < n:
            while i < n and chars[i] == ' ':
                i += 1
            while i < n and chars[i] != ' ':
                chars[k] = chars[i]
                i += 1
                k += 1
            if i < n:
                chars[k] = ' '
                k += 1
       if k > 0 and chars[k-1] == ' ':
           k -= 1
        
       chars = chars[:k]
       
       left = 0
       right = k-1
       while left < right:
           chars[left],chars[right] = chars[right],chars[left]
           left += 1
           right -= 1
       
       start = 0
       for end in range(k+1):
            if end == k or chars[end] == ' ':
                l , r =start,end-1
                while l < r:
                    chars[l],chars[r] = chars[r],chars[l]
                    l += 1
                    r -= 1
                start = end+1
       return "".join(chars)
TC:O(n)
SC:O(1) actually it is O(n) for using list cause in python strings are immmutable so that made us to convert it into list




