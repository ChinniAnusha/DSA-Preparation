#Approach:
#Source:Leetcode
#Brute force
class Solution:
    def rotateString(self, s: str, goal: str) -> bool:
           n = len(s)
           if len(s) != len(goal):
              return False
           for i in range(n):
               if s == goal:
                  return True    
               s = s[-1]+s[:-1]
           return False


#TC:O(n^2)
#SC:O(n)

#Optimal approach:finding the substring that is goal in combining the s+s
class Solution:
    def rotateString(self, s: str, goal: str) -> bool:
           n = len(s)
           if len(s) != len(goal):
              return False
           substring = s+s #O(n)
           if goal in substring:  # O(n)
                  return True   
           return False

#TC:O(n)+O(n)= O(2n) for 
#SC:O(n) for using the entire string
