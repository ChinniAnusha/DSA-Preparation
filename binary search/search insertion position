#Approach:solved using lower bound
#source:Leetcode

class Solution:
    def searchInsert(self, nums: List[int], target: int) -> int:
        n = len(nums)
        low = 0
        high = n - 1
        answer = 0 #here instead of zero we take n
        if target > nums[n-1]:
            return n

        while low <= high:
            mid = (low+high) // 2
            if nums[mid] >= target:
                answer = mid
                high = mid - 1
            else:
                low = mid + 1
    
        return answer

#TC:O(logN)
#SC:O(1)


class Solution:
    def searchInsert(self, nums: List[int], target: int) -> int:
        n = len(nums)
        low = 0
        high = n - 1
        answer = n

        while low <= high:
            mid = (low+high) // 2
            if nums[mid] >= target:
                answer = mid
                high = mid - 1
            else:
                low = mid + 1
    
        return answer

#TC:O(logN)
#SC:O(1)
