#Approach:we have to solve by checking if you encounter arr[low] = arr[mid] = arr[high] shrink low and high until they arent equal
#Source:Leetcode
class Solution:
    def search(self, nums: List[int], target: int) -> bool:
         n = len(nums)
         low = 0
         high = n-1
         while low <= high:
            mid = (low+high)//2
            if nums[mid] == target:
                 return True
            if nums[low] == nums[mid] and nums[mid] == nums[high]:
                low += 1
                high -= 1
                continue
            #left half sorted
            if nums[low] <= nums[mid]:
                if nums[low] <= target <= nums[mid]:
                        high = mid - 1
                else:
                        low = mid + 1
            #right half sorted
            else:
                if nums[mid] <= target <= nums[high]:
                        low = mid + 1
                else:
                        high = mid - 1         
        
         return False
#TC:O(logN)
#SC:O(1)


