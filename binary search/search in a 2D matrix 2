#approach:Better
#source:Leetcode
class Solution:
    def searchMatrix(self, matrix: List[List[int]], target: int) -> bool:
        def binarysearch(arr,target):
            n = len(arr)
            low = 0
            high = n-1
            while low <= high:
                mid = (low+high)//2
                if arr[mid] == target:
                    return True
                elif arr[mid] < target:
                    low = mid + 1
                else:
                    high = mid - 1
            return False

        n = len(matrix)
        m = len(matrix[0])
        for i in range(n):
            if matrix[i][0] <= target and target <= matrix[i][m-1]:
                 if binarysearch(matrix[i],target) is True:
                     return True
        return False

#TC:O(n*log2 m)
#SC:O(1)
#brute force TC will be O(m*n)

#Optimal solution
class Solution:
    def searchMatrix(self, matrix: List[List[int]], target: int) -> bool:
            n = len(matrix)
            m = len(matrix[0])
            i = 0
            j = m-1
            while i < n and j >= 0:
                if matrix[i][j] == target:
                    return True
                elif matrix[i][j] < target:
                     i += 1
                else:
                    j -= 1
            return False
#TC:O(n+m)
#SC:O(1)


