class Node:
    def __init__(self,data):
        self.data = data
        self.next = None
class LL:
    def insertbegin(self,newnode):
        temporary_node = self.head
        self.head = newnode
        newnode.next = temporary_node
        del temporary_node
        
    def __init__(self):
        self.head = None
    
    def insert(self,newnode):
        if self.head is None:
            self.head = newnode
        else:
            last_node = self.head #traverse till the end
            while True:
                if last_node.next is None:
                    break
                last_node = last_node.next
            last_node.next = newnode
    def display(self):
        if self.head is None:
            print("List is empty")
            return
        else:
            current_node = self.head
            while True:
                if current_node is None:
                    break
                print(current_node.data, "-->", end=" ")
                current_node = current_node.next
            print("None")        
        
            
n1 = Node("john")
L1 = LL()
L1.insert(n1)
n2 = Node("Ben")
L1.insert(n2)
n3 = Node("Mathew")
L1.insertbegin(n3)
L1.display()

O/P:Mathew --> john --> Ben --> None
        
