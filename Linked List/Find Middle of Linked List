#brute force
#sloved in two passes
# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def middleNode(self, head: Optional[ListNode]) -> Optional[ListNode]:
          temp = head
          count = 0
          while temp is not None:
              count += 1
              temp = temp.next
          
          middlenode = (count//2)+1
          temp = head
          while temp is not None:
              middlenode -= 1
              if middlenode == 0:
                  break
              temp = temp.next
          return temp


#optimal
# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def middleNode(self, head: Optional[ListNode]) -> Optional[ListNode]:
          slow = head
          fast = head
          while fast != None and fast.next is not None:
               slow = slow.next
               fast = fast.next.next
          return slow
