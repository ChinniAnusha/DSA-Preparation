# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = data
#         self.next = next
class Solution:
    def addTwoNumbers(self, l1: Optional[ListNode], l2: Optional[ListNode]) -> Optional[ListNode]:
          dummynode = ListNode(-1)
          curr = dummynode
          t1 = l1
          t2 = l2
          carry = 0
          while t1 != None or t2 != None:
               summ = carry
               if t1:
                 summ += t1.val 
               if t2:
                 summ += t2.val
               newnode = ListNode(summ % 10)
               carry = summ // 10
               curr.next = newnode
               curr = newnode
               if t1 is not None:
                 t1 = t1.next
               if t2 is not None:
                 t2 = t2.next
          if carry:
            newnode = ListNode(carry)
            curr.next = newnode
            curr = newnode
          return dummynode.next

#TC:O(max(l1,l2))
#SC:O(max(l1,l2))

